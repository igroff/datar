#! /usr/bin/env bash
# vim: ft=sh

###############################################################################
### Usage
### datar init [path]
###
### Creates a storage directory at the path provided, or in the current working
### directory if no path is specified.
###
###############################################################################

MY_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
if [ -z "${UTILS_IMPORTED}" ]; then
  source ${MY_DIR}/utils
fi

echo "running ${BASH_SOURCE[0]} $@"

